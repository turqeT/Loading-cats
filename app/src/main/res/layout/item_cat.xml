<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_holder"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vh_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cat_holder"
        android:layout_width="@dimen/iv_height_weight"
        android:layout_height="@dimen/iv_height_weight"
        
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/iv_margin_top" />

    <TextView
        android:id="@+id/tv_cat_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/tv_margin_h"
        android:layout_marginTop="@dimen/tv_margin_top"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        tools:text="123" />

</LinearLayout>